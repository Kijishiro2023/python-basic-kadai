      "source": [
        "# 台形のサイズ（単位：cm）\n",
        "upper_base = 10   # 上辺\n",
        "lower_base = 20   # 下辺\n",
        "height = 5        # 高さ\n",
        "\n",
        "# 台形の面積を計算して変数に代入\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 計算結果を出力（単位：cm²）\n",
        "print(f\"{area}cm²\")"
      ]
    }
